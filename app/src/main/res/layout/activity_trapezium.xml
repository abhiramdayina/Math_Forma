<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_drawable2"
    tools:context=".Trapezium">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TRAPEZIUM"
        android:textColor="#7300e6"
        android:textSize="22dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="25dp"/>

    <LinearLayout
        android:id="@+id/name2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@+id/name"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:paddingLeft="35dp"
            android:text="BASE 1"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#7300E6" />

        <EditText
            android:id="@+id/etbase1"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.1"
            android:background="#ccd4ff"
            android:hint="Enter base 1"
            android:imeOptions="actionNext"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:inputType="numberDecimal"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/name3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@+id/name2"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:paddingLeft="35dp"
            android:text="BASE 2"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#7300E6" />

        <EditText
            android:id="@+id/etbase2"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.1"
            android:background="#ccd4ff"
            android:hint="Enter base 2"
            android:imeOptions="actionNext"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:inputType="numberDecimal"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/name7"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@+id/name3"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:paddingLeft="35dp"
            android:text="SIDE 1"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#7300E6" />

        <EditText
            android:id="@+id/etside1"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.1"
            android:background="#ccd4ff"
            android:hint="Enter side 1"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:paddingLeft="10dp"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/name8"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@+id/name7"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:paddingLeft="35dp"
            android:text="SIDE 2"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#7300E6" />

        <EditText
            android:inputType="numberDecimal"
            android:id="@+id/etside2"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.1"
            android:background="#ccd4ff"
            android:hint="Enter side 2"
            android:imeOptions="actionNext"
            android:paddingLeft="10dp"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/name9"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@+id/name8"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:paddingLeft="35dp"
            android:text="HEIGHT"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#7300E6" />

        <EditText
            android:id="@+id/etheight"
            android:inputType="numberDecimal"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.1"
            android:background="#ccd4ff"
            android:hint="Enter height"
            android:imeOptions="actionNext"
            android:paddingLeft="10dp"
            android:singleLine="true" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/btnlay"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/name9"
        android:layout_marginTop="40dp"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/btnCalc"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/cornerbtn"
            android:text="Calculate"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/name4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@+id/btnlay"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/tvarea"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="35dp"
            android:text="Area  : "
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#ccd4ff" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/name5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@+id/name4"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/tvperimeter"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="35dp"
            android:text="Perimeter  : "
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#ccd4ff" />
    </LinearLayout>

</RelativeLayout>