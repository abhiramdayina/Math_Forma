<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_drawable2"
    tools:context=".QuadraticEquation">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="axÂ² + bx + c"
        android:textColor="#7300e6"
        android:textSize="22dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="25dp"/>

    <LinearLayout
        android:id="@+id/name2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center_horizontal"
        android:layout_below="@+id/name"
        android:layout_marginTop="20dp">


        <EditText
            android:inputType="numberDecimal"
            android:id="@+id/eta"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_weight="0.1"
            android:background="#ccd4ff"
            android:gravity="center"
            android:hint="Enter 'a' value"
            android:imeOptions="actionNext"
            android:singleLine="true" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/name3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center_horizontal"
        android:layout_below="@+id/name2"
        android:layout_marginTop="15dp">


        <EditText
            android:inputType="numberDecimal"
            android:id="@+id/etb"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_weight="0.1"
            android:background="#ccd4ff"
            android:gravity="center"
            android:hint="Enter 'b' value"
            android:imeOptions="actionNext"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/name4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center_horizontal"
        android:layout_below="@+id/name3"
        android:layout_marginTop="15dp">


        <EditText
            android:inputType="numberDecimal"
            android:id="@+id/etc"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_weight="0.1"
            android:background="#ccd4ff"
            android:gravity="center"
            android:hint="Enter 'c' value"
            android:imeOptions="actionNext"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnlay"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/name4"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/btnCalc"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/cornerbtn"
            android:text="Calculate"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/name5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@+id/btnlay"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="Roots are"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#ccd4ff" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/name6"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@+id/name5"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical|center_horizontal"
            android:text=""
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#ccd4ff" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/name7"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@+id/name6"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="and"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#ccd4ff" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/name8"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@+id/name7"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical|center_horizontal"
            android:text=""
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#ccd4ff" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/name9"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@+id/name8"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/error"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical|center_horizontal"
            android:text=""
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#ccd4ff" />
    </LinearLayout>


</RelativeLayout>